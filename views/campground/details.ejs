<% layout('layouts/boilerplate') %>
	<h1><%=ground.title%></h1>
	<img src="<%=ground.image%>" alt="">
	<p><%=ground.description%></p>
	<ul>
		<li><%=ground.price%></li>
		<li>--<%=ground.location%></li>
	</ul>

<% layout('layouts/boilerplate') %>
<body>
	<div id="map" style="width: 100%; height: 500px;"></div>
	<h1>This is the page to show all the campgrounds in the database</h1>
		<% for(let x of grounds) {%>
		    <div class="card">
		    	<div class="row">
		    		<div class="col-md-4">
		    			<% if(x.images.length) {%>
		    				<img class="img-fluid" src="<%=x.images[0].url%>" alt="">
		    			<% }else{ %>
		    				<img src="https://res.cloudinary.com/chadchampion/image/upload/v1616938179/YelpCamp/onsqcoe4194je2pxi5jm.jpg" alt="" class="img-fluid">
		    			<% }%>
		    		</div>
		    		<div class="col-md-8">
		    			<div class="card-body">
		    				<h5 class="card-title">
		    					<%=x.title%>
		    				</h5>
		    				<p class="card-text"><%=x.description%></p>
		    				<p class="card-text">
		    					<small class="text-muted"><%=x.location%></small>
		    				</p>
		    				<a href="/campgrounds/<%=x._id%>" class="btn btn-primary">View <%=x.title%></a>
		    			</div>
		    		</div>
		    	</div>
		    </div>
		<%}%>
	<a href="/campgrounds/new">Add a new campground</a>
	<script>
		const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
		const campgrounds = { features: <%-JSON.stringify(grounds)%>};
	</script>
	<script src="/js/clusterMap.js"></script>
</body>

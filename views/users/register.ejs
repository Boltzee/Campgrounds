<% layout('layouts/boilerplate') %>
<div class="row">
	<div class="col-6 offset-3">
		<h2>Register</h2>
		<form action="/register" method="POST" class="validate-form" novalidate>
			<div class="mb-1">
				<label class="form-label" for="username">Enter the username:</label>
				<input class="form-control" type="text" name="username" id="username" required>
				<div class="valid-feedback">
					Looks good
				</div>
				<div id="validationServerFeedback00" class="invalid-feedback">
		      		Please provide a username.
		  		</div>
			</div>
			<div class="mb-1">
				<label class="form-label" for="email">Enter valid email:</label>
				<input class="form-control" type="email" name="email" id="email" required>
				<div class="valid-feedback">
					Looks good
				</div>
				<div id="validationServerFeedback01" class="invalid-feedback">
		      		Please provide a valid e-mail.
		  		</div>
			</div>
			<div class="mb-1">
				<label class="form-label" for="password">Enter the password:</label>
				<input class="form-control" type="password" name="password" id="password">
				<div class="valid-feedback">
					Looks good
				</div>
				<div id="validationServerFeedback02" class="invalid-feedback">
		      		Please provide a valid password.
		  		</div>
			</div>
			<button class="btn btn-success">Submit</button>
		</form>
	</div>
</div>
	